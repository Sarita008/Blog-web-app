<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Comment Update</title>
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>

    <div class="form-container">
      <h1>Update Comment</h1>
      <p>
        <!-- lock icon -->
        <img style="width: 30px;"  src="/images/passwords.png" />
      </p>
      <%if(error){%>
      <small class="error">
        <img style="width: 30px;"  src="/images/error.png" />
        <%=error%>
      </small>
      <%}%>
      <form
        action="/api/v1/comments/<%=comment?._id%>?_method=PUT&postId=<%=comment.post%>"
        method="POST">
        <label for="password">message</label>
        <input value="<%=comment?.message%> " type="text" name="message" />

        <button type="submit">Update Comment</button>
      </form>
    </div>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
