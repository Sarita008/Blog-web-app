<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />

    <title>Register</title>
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>
    <div class="form-container">
      <h1>
        Register
        <img style="width: 30px;" src="/images/adduser.png" />
      </h1>

       <%if(error){%>     <!--display with dynamic value -->
      <small class="error">
        <img style="width: 30px;" src="/images/error.png" />
        <%=error%>
      </small>
      <%}%>

      <form action="/api/v1/users/register" method="POST">
        <!-- full name -->
        <label for="name">Full Name</label>
        <input type="text" name="fullname" />
        <!-- email -->
        <label for="email">Email</label>
        <input type="email" name="email" />

        <label for="password">Password</label>
        <input type="password" name="password" />

        <button type="submit">Register</button>

        <p>Already have an account? <a href="/api/v1/users/login">Login</a></p>
      </form>
    </div>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
